<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplicantProfile">

    <RelativeLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="5sp"
            app:srcCompat="@drawable/ic_close_white_24dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/applicantProfile"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profileHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="5sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginLeft="10sp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_applicantName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:text="TextView"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_applicantDOB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_applicantEducation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_applicantLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_applicantDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textSize="15sp" />

                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/cv"-->
                    <!--                        android:layout_width="35sp"-->
                    <!--                        android:layout_height="35sp"-->
                    <!--                        app:srcCompat="@drawable/outline_insert_drive_file_white_48dp"-->
                    <!--                        android:layout_weight="0.1"/>-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btn_applicantViewFile"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_login_card"
                        android:text="@string/viewFile"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_applicantCall"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_marginHorizontal="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_login_card"
                        android:text="@string/call"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_applicantEmail"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_login_card"
                        android:text="@string/email"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/portfolio"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <!--                <ImageView-->
                <!--                    android:id="@+id/add"-->
                <!--                    android:layout_width="35sp"-->
                <!--                    android:layout_height="35sp"-->
                <!--                    app:srcCompat="@drawable/baseline_add_circle_outline_white_48dp"-->
                <!--                    android:layout_alignParentRight="true"/>-->

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>