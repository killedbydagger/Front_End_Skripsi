<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Premium">

    <RelativeLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="5sp"
            app:srcCompat="@drawable/ic_close_white_24dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/premium"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action"
        android:layout_above="@id/btn_callCS"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                app:srcCompat="@drawable/logo1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PREMIUM MEMBER"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text=" Apa keuntungan menjadi premium member?"
                android:textColor="@color/colorGrapeFruitDark"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Ada 2 sisi keuntungan menjadi premium member."
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Pada sisi pengguna bisa mengunggah Portfolio lebih banyak di banding Normal Member yaitu dari hanya bisa mengunggah 3 menjadi 15."
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Pada sisi bisnis bisa mengunggah lowongan lebih banyak di banding Normal Member yaitu dari hanya bisa mengunggah 2 menjadi 10. Lalu perusahaan juga mendapatkan keuntungan ketika lowongan pekerjaan di tampilkan pada pengguna, lowongan yang telah di taruh oleh PREMIUM MEMBER akan menjadi prioritas."
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Mau mendapatkan keuntungan lebih ketika memakai aplikasi hire me ? ubah akun anda menjadi PREMIUM"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_callCS"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20sp"
        android:layout_marginVertical="10sp"
        android:layout_weight="1"
        android:background="@drawable/button_login_card"
        android:text="@string/callCustomerService"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />

</RelativeLayout>