<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailVacancy">

    <RelativeLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="50sp"
            android:layout_height="50sp"
            app:srcCompat="@drawable/ic_close_white_24dp"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="5sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "@string/detailVacancy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout_vacancy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_color"
            android:layout_marginBottom="10sp"
            android:layout_below="@id/action">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_favorite"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="55sp">

                    <LinearLayout
                        android:layout_width="60sp"
                        android:layout_height="135sp"
                        android:layout_marginLeft="20sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_company"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:layout_weight="1"
                            tools:srcCompat="@drawable/logo1"
                            android:layout_marginVertical="10sp"
                            android:background="@color/colorWhite"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Category"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/pembatas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5sp"
                                android:text="-"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Position"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_companyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Company name"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_salary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Salary"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20sp"
                android:layout_marginBottom="10sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_bintang"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/star" />

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="1"
                        android:text="Rating"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_alignParentRight="true"
                    android:text="Status"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_rate"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="@string/viewRating"
                android:background="@drawable/button_login_card"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:layout_marginHorizontal="20sp"
                android:layout_marginBottom="10sp"/>

        </LinearLayout>


    <TextView
        android:id="@+id/tv_description"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edit_text_card"
        android:layout_below="@id/layout_vacancy"
        android:layout_above="@id/btn_apply"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="10sp"
        android:focusable="false"
        android:padding="10sp"
        android:scrollbars = "vertical"
        android:textColor="@color/colorBlack"
        android:elevation="5sp"/>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/button_login_card"
        android:text="@string/apply"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/notActive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="This vacancy already not active"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:background="#8888"
        android:layout_below="@id/action"
        android:textStyle="bold"
        android:visibility="gone"
        />


</RelativeLayout>