<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/gradient_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10sp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="5sp">

            <Spinner
                android:id="@+id/sp_kategori"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/edit_text_card"
                android:elevation="5sp"
                android:layout_marginTop="10sp" />

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10sp"
                android:background="@color/cardview_light_background"
                android:elevation="5sp"
                android:queryHint="@string/searchKeyword" />

            <Spinner
                android:id="@+id/sp_lokasi"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/edit_text_card"
                android:elevation="5sp"/>

            <EditText
                android:id="@+id/et_lastName"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/edit_text_card"
                android:elevation="5sp"
                android:paddingHorizontal="10sp"
                android:hint="@string/minimumSalary"/>

            <Button
                android:id="@+id/btn_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:background="@drawable/button_login_card"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="10sp"
                android:textSize="18sp"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>