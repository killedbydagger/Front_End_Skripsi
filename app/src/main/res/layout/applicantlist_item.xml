<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10sp"
    android:background="@drawable/edit_text_card"
    android:elevation="5sp"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/applicantData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_applicantPhoto"
            android:layout_width="75sp"
            android:layout_height="75sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_applicantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_applicantPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edt_phone"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginHorizontal="5sp"
            android:layout_weight="1"
            android:background="@drawable/button_login_card"
            android:text="@string/accept"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginHorizontal="5sp"
            android:layout_weight="1"
            android:background="@drawable/button_login_card"
            android:text="@string/reject"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_applicantStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textAlignment="center"
            android:visibility="gone"/>


    </LinearLayout>
</LinearLayout>